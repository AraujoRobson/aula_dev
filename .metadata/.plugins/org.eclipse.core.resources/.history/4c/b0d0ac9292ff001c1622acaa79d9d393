package Exercicio2;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		int escolha;
		
		Scanner scan = new Scanner(System.in);
		
		Imovel imovel = new Imovel("Rua Goiabinha", 200000);
		
		
		System.out.println("Menu:"+
							"\nInforme 1 para NOVO"+
							"\nInforme 2 para USADO");
		escolha = scan.nextInt();
		
		switch(escolha) {
		case 1:
			Novo novo = new Novo(imovel.getEndereco(),imovel.getPreco(),25000);
			System.out.println(novo.toString());
			break;
		case 2:
			Velho velho = new Velho(imovel.getEndereco(),imovel.getPreco(),20000);
			System.out.println(velho.toString());
			break;
		default:
			System.out.println("Opção inválida...");
		}
		
		

	}

}
