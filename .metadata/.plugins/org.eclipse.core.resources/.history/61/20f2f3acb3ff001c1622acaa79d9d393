package Exercicio3;

public class Administrador extends Empregado {
	
	private double ajudaCusto;
	

	public Administrador(String nome, String endereco, String telefone, double salario) {
		super(nome, endereco, telefone, salario);
	}
	
	@Override
	public double calcSalario() {
		return (getSalarioBase() + this.ajudaCusto);
	}

	
	
	@Override
	public String toString() {
		return super.toString() +
				"\nAjuda de Custo: " + ajudaCusto + " (Já incluso no salário)";
	}

	public double getAjudaCusto() {
		return ajudaCusto;
	}

	public void setAjudaCusto(double ajudaCusto) {
		this.ajudaCusto = ajudaCusto;
	}
	
	

}
